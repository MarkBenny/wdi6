<form action="<%= mountain_path(@mountain.id) %>" method="post">
  <label>Name:</label>
  <input type="text" name="mountain[name]" value="<%= @mountain.name %>" autofocus>
  <label>Image:</label>
  <input type="text" name="mountain[image]" value="<%= @mountain.image %>">
  <label>Country:</label>
  <input type="text" name="mountain[country]" value="<%= @mountain.country %>">
  <label>Elevation:</label>
  <input type="text" name="mountain[elevation]" value="<%= @mountain.elevation %>">
  <label>Volume:</label>
  <input type="text" name="mountain[volume]" value="<%= @mountain.volume %>">
  

  <button>Update mountain</button>
</form>